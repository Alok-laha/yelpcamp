<%-include("header")%>

<div class="row" id="newentry">
<h3 style="text-align=center; margin-bottom: 25px;"> Create new campground </h3>
<form class="container" action="/campground" method="POST">

		<div class="form-group">
			<input class="form-control" type="text" name="name" placeholder="Campground Name" required style="text-align=center;">
		</div>

		<div class="form-group">
			<input class="form-control" type="text" name="image" placeholder="Campground Image" required style="text-align=center;">
		</div>

		<div class="form-group">
			<input class="form-control" type="text" name="description" placeholder="Campground Description" required style="text-align=center;">
		</div>

		<div class="form-group">
		<button class=" btn btn-primary btn-block">Submit</button>
		</div>

</form>
</div>

<a class="btn btn-primary" href="/campground">Go back</a>
<%-include("footer")%>